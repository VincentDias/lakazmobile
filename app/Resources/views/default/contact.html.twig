{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <h1>Contact</h1>
        </div>
    </div>
    <div class="row text-center justify-content-center">
        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
            <img src="{{asset('images/signature-gmailok.png')}}" width="40%"/>
        </div> 
        <div class="col-12 col-sm-12 col-md-8 col-lg-6">
            
            <form method="post">
                <div class="row justify-content-center">
                    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-8">
                        <input type="text" class="form-control" placeholder="Nom" name="name" required>
                    </div>
                    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-8">
                        <input type="text" class="form-control" placeholder="Prénom" name="surname" required>
                    </div>
                    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-8">
                        <input type="email" class="form-control" placeholder="Email" name="email" required>
                    </div>
                    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-8">
                        <select class="custom-select mr-sm-2" name="intitule">
                            <option value="" selected="selected">- Sélectionner -</option>
                            <option value="demande">Demande</option>
                            <option value="festival">Festival</option>
                            <option value="mariage">Mariage</option>
                        </select>
                    </div>
                    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-8">
                        <textarea class="form-control" rows="5" placeholder="Votre message" name="message" required></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            
            </form>
        </div>
    </div>
{% endblock %}