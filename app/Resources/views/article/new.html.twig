{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center">
            <h1>Création d'un nouvel article</h1>
        </div>
    </div>

    <div class="row d-flex justify-content-center form-group">
        <div class="col-10 col-sm-10 col-md-8 col-lg-8 text-center">
            {{ form_start(form, {'attr':{'novalidate': 'novalidate'}}) }}

            {{ form_label(form.name, 'Titre de l\'image')}}
            {{ form_widget(form.name, {'attr':{'class':'form-control'}})}}
            {{ form_errors(form.name)}}
        
            {{ form_label(form.description, 'Description')}}
            {{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
            {{ form_errors(form.description)}}
        
            {{ form_label(form.articleImage.name, 'Titre de l\'image')}}
            {{ form_widget(form.articleImage.name, {'attr':{'class':'form-control'}})}}
            {{ form_errors(form.articleImage.name)}}
        
            {{ form_label(form.articleImage.alt, 'Mots clés de l\'image')}}
            {{ form_widget(form.articleImage.alt, {'attr':{'class':'form-control'}})}}
            {{ form_errors(form.articleImage.alt)}}
        
            {{ form_label(form.articleImage.pathImage, 'Choisir un fichier')}}
            {{ form_widget(form.articleImage.pathImage, {'attr':{'class':'form-control'}})}}
            {{ form_errors(form.articleImage.pathImage)}}
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center">
            {{ form_widget(form) }}
            <button class="btn btn-warning" type="submit" value="Ajouter"/>Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center">
            <button class="btn btn-warning" type="button">
                <a href="{{ path('article_index') }}">Retour aux articles</a>
            </button>
        </div>
    </div>
{% endblock %}