{% extends 'base.html.twig' %}

{% block body %}


<div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Création d'un nouvel article</h1>

                {{ form_start(form, {'attr':{'novalidate': 'novalidate'}}) }}

                <div class="form-group">
                    <div class="row d-flex justify-content-center">
                        <div class="col-6">
                            {{ form_label(form.name, 'Titre de l\'image')}}
                            {{ form_widget(form.name, {'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.name)}}
                        
                            {{ form_label(form.description, 'Description')}}
                            {{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.description)}}
                        
                            {{ form_label(form.articleImage.name, 'Titre de l\'image')}}
                            {{ form_widget(form.articleImage.name, {'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.articleImage.name)}}
                        
                            {{ form_label(form.articleImage.alt, 'Mots clés de l\'image')}}
                            {{ form_widget(form.articleImage.alt, {'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.articleImage.alt)}}
                        
                            {{ form_label(form.articleImage.pathImage, 'Choisir un fichier')}}
                            {{ form_widget(form.articleImage.pathImage, {'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.articleImage.pathImage)}}
                        </div>
                    </div>
                </div>


                {{ form_widget(form) }}
                <input type="submit" value="Ajouter"/>
                {{ form_end(form) }}

                <button class="btn btn-warning" type="button">
                    <a href="{{ path('article_index') }}">Revenir à la liste des articles</a>
                </button>
            </div>
        </div>
    </div>
{% endblock %}